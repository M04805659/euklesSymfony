{% extends 'base.html.twig' %}

{% block title %}Saisir Materiel{% endblock %}

{% block body %}

    <div class="example-wrapper mb-5 mt-5">
        <h1 class="text-center py-4">Listes des  Materiels</h1>
    </div>


    <div>
        <a href="{{ path('new_materiel') }}" class="btn btn-lg  btn-success mb-3">
            <i class="fa fa-plus" aria-hidden="true"></i> Cr√©er un nouveau Materiel
        </a>
    </div>

    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Reference</th>
            <th scope="col">Prix</th>
        </tr>
        </thead>
        <tbody>
        {% for materiel in materiels %}
            <tr>
                <td>{{ materiel.nom }}</td>
                <td>{{ materiel.reference }}</td>
                <td>{{ materiel.prixvente }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">Aucun Materiel</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
